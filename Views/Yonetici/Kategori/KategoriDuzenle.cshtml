@model BeyazEsyaE_Ticaret.tbl_kategori

@{
    ViewBag.Title = "Kategori Düzenleme";
    Layout = "~/Views/Shared/_YoneticiLayout.cshtml";
}

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-2">
    <h3><i class="fa fa-edit text-success me-2"></i>Kategori Düzenleme</h3>
    <a href="@Url.Action("Index", "Kategori")" class="btn btn-sm btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Kategori Listesine Dön
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <strong><i class="fa fa-pencil-alt text-dark"></i> Kategori Bilgileri</strong>
            </div>

            <!-- Kategori düzenleme formu-->
            <div class="card-body">
                @using (Html.BeginForm("KategoriDuzenle", "Kategori", FormMethod.Post, new { @id = "kategoriDuzenleForm" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(KategoriDuzenle => KategoriDuzenle.kategori_ID)

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.kategori_adi, "Kategori Adı", new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.kategori_adi, new { @class = "form-control", @placeholder = "Örn: Buzdolabı", @id = "kategoriAdi" })
                        @Html.ValidationMessageFor(model => model.kategori_adi, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Güncelle
                        </button>
                        <button type="button" class="btn btn-warning" onclick="document.getElementById('kategoriAdi').value = '';">
                            <i class="fas fa-eraser"></i> Temizle
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bilgilendirme kartı-->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <i class="fa fa-info-circle text-primary"></i> Bilgilendirme
            </div>
            <div class="card-body">
                <p class="card-text">
                    Bu form aracılığıyla mevcut bir kategoriyi düzenleyebilirsiniz.
                </p>
                <p class="card-text">
                    Kategori adında değişiklik yaptıktan sonra “Güncelle” butonuna tıklayarak değişiklikleri kaydedebilirsiniz.
                </p>
                <hr />
                <p class="card-text text-muted">
                    Lütfen sistemde aynı isimde bir kategori olmadığından emin olunuz.
                </p>
            </div>
        </div>
    </div>
</div>