@model BeyazEsyaE_Ticaret.Models.GirisViewModel
@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">
                <h3 class="text-center fw-bold mb-1">Beyaz Eşya E-Ticaret</h3>
                <p class="text-center text-muted mb-4">Hesabınıza giriş yapın</p>

                <!-- Giriş formu -->
                @using (Html.BeginForm("Giris", "Giris", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, "Email", new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Email adresiniz" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Sifre, "Şifre", new { @class = "form-label fw-semibold" })
                        <div class="input-group">
                            @Html.PasswordFor(m => m.Sifre, new { @class = "form-control form-control-lg", placeholder = "Şifreniz", id = "GirisSifre", autocomplete = "current-password" })
                            <span class="input-group-text toggle-password" data-target="GirisSifre" title="Göster/Gizle">
                                <i class="fa-solid fa-eye"></i>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Sifre, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.BeniHatirla, new { @class = "form-check-input", id = "beniHatirla" })
                            <label class="form-check-label" for="beniHatirla">Beni Hatırla</label>
                        </div>
                        <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#sifremiUnuttumModal" class="text-decoration-none">Şifremi Unuttum</a>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                    </div>

                    <div class="text-center mt-3">
                        <span class="text-muted">Hesabın yok mu?</span>
                        <a href="@Url.Action("Kayit","Giris")" class="ms-1 text-decoration-none fw-semibold">Kaydol</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Şifremi unuttum modalı -->
<div class="modal fade" id="sifremiUnuttumModal" tabindex="-1" aria-labelledby="sifremiUnuttumModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow-lg">
            @using (Html.BeginForm("SifremiUnuttum", "Giris", FormMethod.Post))
            {
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Şifremi Unuttum</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        @Html.Label("Email", "Email", new { @class = "form-label fw-semibold" })
                        @Html.TextBox("Email", null, new { @class = "form-control form-control-lg", placeholder = "Email adresiniz", type = "email" })
                        @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                        <br />
                        <small class="text-muted">Sıfırlama bağlantısı bu adrese gönderilecek.</small>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-primary">Sıfırlama Linki Gönder</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Yeni şifre belirleme modalı -->
<div class="modal fade" id="sifreSifirlaModal" tabindex="-1" aria-labelledby="sifreSifirlaModalLabel" aria-hidden="true" data-bs-backdrop="static"
     data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow-lg">
            @using (Html.BeginForm("SifreSifirla", "Giris", FormMethod.Post))
            {
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold text-success">Yeni Şifre Belirle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Token", "", new { id = "resetToken" })
                    <div class="mb-3">
                        @Html.Label("YeniSifre", "Yeni Şifre", new { @class = "form-label fw-semibold" })
                        <div class="input-group">
                            @Html.Password("YeniSifre", null, new { @class = "form-control form-control-lg", placeholder = "Yeni şifreniz", id = "yeniSifre" })
                            <span class="input-group-text toggle-password" data-target="yeniSifre" ...>
                                <i class="fa-solid fa-eye"></i>
                            </span>
                        </div>
                        @Html.ValidationMessage("YeniSifre", "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.Label("YeniSifreTekrar", "Şifre Tekrar", new { @class = "form-label fw-semibold" })
                        <div class="input-group">
                            @Html.Password("YeniSifreTekrar", null, new { @class = "form-control form-control-lg", placeholder = "Yeni şifrenizi tekrar girin", id = "yeniSifreTekrar" })
                            <span class="input-group-text toggle-password" data-target="yeniSifreTekrar" ...>
                                <i class="fa-solid fa-eye"></i>
                            </span>
                        </div>
                        @Html.ValidationMessage("YeniSifreTekrar", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            }
        </div>
    </div>
</div>

<div id="resetFlags"
     data-token="@ViewBag.ResetToken"
     data-openreset="@((ViewBag.OpenReset ?? false).ToString().ToLower())"
     style="display:none"></div>
