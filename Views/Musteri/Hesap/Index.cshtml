@model BeyazEsyaE_Ticaret.Models.HesapViewModel
@{
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-10 col-md-12">
        <div class="text-center mb-5">
            <h2 class="text-primary fw-bold">
                <i class="fa-solid fa-user-circle me-2"></i> Hesap Bilgilerim
            </h2>
            <p class="text-muted">Kişisel bilgilerinizi görüntüleyebilir, şifrenizi değiştirebilir ve sipariş geçmişinize ulaşabilirsiniz.</p>
            <hr class="w-50 mx-auto" />
        </div>

        <!-- Hesap bilgileri -->
        <div class="card shadow border-0 rounded-4">
            <div class="card-body p-3">
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fa-solid fa-user me-1"></i> Ad Soyad
                        </label>
                        <div class="fs-6">@Model.Ad @Model.Soyad</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fa-solid fa-envelope me-1"></i> E-Posta
                        </label>
                        <div class="fs-6">@Model.Email</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fa-solid fa-phone me-1"></i> Telefon
                        </label>
                        <div class="fs-6">@Model.Telefon</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fa-solid fa-location-dot me-1"></i> Adres
                        </label>
                        <div class="fs-6">
                            @if (!string.IsNullOrEmpty(Model.Adres))
                            {
                                <p class="mb-0">@Model.Adres</p>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Adres bilgisi bulunmamaktadır.</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Sayfa bağlantıları -->
                <div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
                    <a href="/Hesap/SifreDegistir" class="btn btn-success px-4">
                        <i class="fa-solid fa-key me-1"></i> Şifre Değiştir
                    </a>
                    <a href="/Hesap/BilgileriGuncelle" class="btn btn-primary px-4">
                        <i class="fa-solid fa-pen me-1"></i> Bilgileri Güncelle
                    </a>
                    <a href="/Hesap/SiparisGecmisi" class="btn btn-warning text-white px-4">
                        <i class="fa-solid fa-box-archive me-1"></i> Sipariş Geçmişi
                    </a>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <small class="text-muted">Son giriş: @(DateTime.Now.ToString("dd.MM.yyyy HH:mm"))</small>
        </div>
    </div>
</div>
